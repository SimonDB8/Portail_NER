@{
    ViewData["Title"] = "PV";

}
<!DOCTYPE html>
    <html lang="en">
    <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>PV Chart</title>
      <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    </head>
    <body>
      <canvas id="pvChart" width="600" height="400"></canvas>

      <script>
        // Data
        const years = [2010, 2011, 2012, 2013, 2014, 2015, 2016, 2017, 2018];
        const pvData = [600000, 1345000, 5700000, 21676000, 40565543, 59900000, 67048092, 74466000, 83590000];

        // PV Chart
        const pvChart = new Chart(document.getElementById('pvChart').getContext('2d'), {
          type: 'line',
          data: {
            labels: years,
            datasets: [{
              label: 'PV (KWh)',
              data: pvData,
              borderColor: 'rgba(75, 192, 192, 1)',
              borderWidth: 2,
              fill: false,
            }]
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
              x: {
                type: 'linear',
                position: 'bottom'
              },
              y: {
                title: {
                  display: true,
                  text: 'PV (KWh)'
                }
              }
            }
          }
        });
      </script>
    </body>
    </html>